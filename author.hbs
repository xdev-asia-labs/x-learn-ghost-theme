{{!< default}} {{#author}} <div class="hero-area relative">
   <div class="hero-bg relative">
      {{#if cover_image}}
      <img class="w-full h-64 object-cover"
         src="{{#if cover_image}}{{cover_image}}{{else}}{{asset 'images/blank.png'}} {{/if}}" alt="{{name}}">
      {{else}}
      <div class="w-full  h-64 bg-white">
      </div>
      {{/if}}
      <span
         class="overlay-bg absolute left-0 right-0 bottom-0 top-0 bg-blue-800 opacity-10 group-hover:opacity-20  duration-100"></span>
   </div>
   <div class="container mx-auto">
      <div class="hero-author-1 text-center relative -mt-20">
         {{#if profile_image}}
         <img class="w-32 h-32 rounded-full object-cover mx-auto mb-4" src="{{img_url profile_image}}" alt="{{name}}">
         {{/if}}
         <h5 class="font-serif text-3xl text-gray-800 font-bold mb-2">{{name}}</h5>

         <p class="text-base leading-relaxed text-gray-400 font-normal mt-4">{{bio}} </p>
      </div>
   </div>
   </div>
   <!-- Stats Section -->
   <section class="stats-section py-12 ">
      <div class="container mx-auto">
         <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {{#get "posts" include="count.posts" filter="authors:{{slug}}+tag:hash-course"}}
            <div class="text-center bg-gray-50 p-6 rounded-lg">
               <h3 class="text-2xl font-bold text-gray-800 mb-0">{{posts.length}}</h3>
               <p class="text-gray-400">{{t "courses-published"}}</p>
            </div>
            {{/get}}
            {{#get "posts" include="count.posts" filter="tag:[hash-blog]+authors:{{slug}}"}}
            <div class="text-center bg-gray-50 p-6 rounded-lg">
               <h3 class="text-2xl font-bold text-gray-800 mb-0">{{posts.length}}</h3>
               <p class="text-gray-400">{{t "articles-written"}}</p>
            </div>
            {{/get}}
            <div class="text-center bg-gray-50 p-6 rounded-lg">
               <h3 class="text-2xl font-bold text-gray-800 mb-0">{{date format="Y"}}</h3>
               <p class="text-gray-400">{{t "member-since"}}</p>
            </div>
         </div>
      </div>
   </section>
   {{/author}}
   <section class="author-area py-10 ">
      <div class="container mx-auto">
         <div class="flex flex-col   gap-14">
            <div class="autor-course-area">
               <div class="text-left mb-8">
                  <h2 class="text-3xl font-bold text-gray-800 mb-2">{{t "latest-courses"}}</h2>
               </div>
               <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 w-full">
                  {{#author}}
                  {{#get "posts" include="count.posts,tags,authors" filter="authors:{{slug}}+tag:[hash-course]"
                  limit="100" }}
                  {{#if posts}}
                  {{#foreach posts}}
                  {{> cards/card-course}}
                  {{/foreach}}
                  {{else}}
                  <h3>{{t "nothing-published-yet"}}</h3>
                  {{/if}}
                  {{/get}}
                  {{/author}}
               </div>
            </div>
            <div class="author-posts-area">
               <div class="text-left mb-8">
                  <h2 class="text-3xl font-bold text-gray-800 mb-2">{{t "latest-articles"}}</h2>
               </div>
               <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 w-full">
                  {{#author}}
                  {{#get "posts" include="count.posts,tags,authors" filter="tag:[hash-blog]+authors:{{slug}}"
                  limit="100" }}
                  {{#if posts}}
                  {{#foreach posts }}
                  {{> cards/card-post}}
                  {{/foreach}}
                  {{else}}
                  <h3>{{t "nothing-published-yet"}}</h3>
                  {{/if}}
                  {{/get}}
                  {{/author}}
               </div>
            </div>
         </div>
      </div>
   </section>