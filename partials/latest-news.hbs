{{#get "posts" include="tags,authors" filter="tag:hash-news+status:published" limit="6"}}
<section class="news-area pt-12 md:pt-16 lg:pt-24 relative z-10">
    <!-- Background Decoration -->
    <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full max-w-4xl bg-cyan-500/5 rounded-full blur-3xl pointer-events-none">
    </div>

    <div class="container mx-auto relative z-10">
        <div class="section-title text-center w-full mb-8 lg:mb-12">
            <div
                class="flex items-center justify-between gap-4 mb-6 w-full pb-4 border-b border-gray-100 dark:border-gray-800">
                <h4 class="text-3xl font-bold text-gray-900 dark:text-white tracking-tight relative">
                    <span class="relative z-10">{{t "latest-news"}}</span>
                    <span
                        class="absolute -bottom-4 left-0 w-1/3 h-1 bg-gradient-to-r from-cyan-600 to-blue-500 rounded-full"></span>
                </h4>

                <!-- View All Button - Small and Minimal -->
                <a href="/news"
                    class="group inline-flex items-center px-5 py-2.5 bg-white dark:bg-slate-800 border border-gray-200 dark:border-gray-700 hover:border-cyan-500 dark:hover:border-cyan-500 text-gray-600 dark:text-gray-300 hover:text-cyan-600 dark:hover:text-cyan-400 text-sm font-bold rounded-full hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300">
                    <span class="mr-2 hidden sm:block">{{t "view-all"}}</span>
                    <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-200" fill="none"
                        stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M17 8l4 4m0 0l-4 4m4-4H3">
                        </path>
                    </svg>
                </a>
            </div>
        </div>

    </div>
    <div class="container mx-auto relative z-10">
        <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 posts">
            {{#foreach posts }}
            {{> cards/card-news}}
            {{/foreach}}
        </div>

    </div>
</section>
{{/get}}