<div class="md:flex flex-row-reverse justify-between gap-6 items-center text-center lg:text-left pb-12 relative z-10">
   <ul class="inline-flex items-center my-2 text-center lg:text-right">
      {{#if facebook }}
      <li><a class="group hover:bg-blue-50 bg-white w-10 h-10 rounded-full flex items-center justify-center duration-300 m-2"
            href="{{social_url type=" facebook"}}">
            {{> icons/social/facebook}}
         </a>
      </li>
      {{/if}}
      {{#if twitter }}
      <li><a class="group hover:bg-blue-50 bg-white w-10 h-10 rounded-full flex items-center justify-center duration-300 m-2"
            href="{{social_url type=" twitter"}}">
            {{> icons/social/twitter}}
         </a>
      </li>
      {{/if}}
      {{#if instagram }}
      <li><a class="group hover:bg-blue-50 bg-white w-10 h-10 rounded-full flex items-center justify-center duration-300 m-2"
            href="{{social_url type=" instagram"}}">
            {{> icons/social/instagram}}
         </a>
      </li>
      {{/if}}
      {{#if linkedin }}
      <li><a class="group hover:bg-blue-50 bg-white w-10 h-10 rounded-full flex items-center justify-center duration-300 m-2"
            href="{{social_url type=" linkedin"}}">
            {{> icons/social/linkedin}}
         </a>
      </li>
      {{/if}}
   </ul>
   <div class="my-2">
      <p class="text-base leading-relaxed text-gray-800 font-normal">
         &copy; {{date format="YYYY"}} {{@site.title}}
      </p>
   </div>
</div>