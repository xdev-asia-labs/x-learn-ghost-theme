{{#get "authors" limit="1" include="count.posts" order="count.posts desc"}}
{{#foreach authors}}
<section
   class="author-area pt-8 md:pt-10 lg:pt-16 relative overflow-hidden bg-white dark:bg-slate-950 transition-colors duration-500">
   <!-- AI Background Elements (Dark Mode Only) -->
   <div class="absolute inset-0 opacity-0 dark:opacity-100 transition-opacity duration-500 pointer-events-none">
      <!-- Cyber Grid -->
      <div
         class="absolute inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:24px_24px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]">
      </div>

      <!-- Moving Scan Line Background -->
      <div
         class="absolute inset-0 bg-gradient-to-b from-transparent via-cyan-500/5 to-transparent h-[200%] w-full animate-[scan_4s_linear_infinite] pointer-events-none">
      </div>

      <!-- Glowing Orbs -->
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-cyan-500/20 rounded-full blur-[100px] animate-pulse"></div>
      <div
         class="absolute bottom-0 right-1/4 w-96 h-96 bg-blue-600/20 rounded-full blur-[100px] animate-pulse delay-1000">
      </div>
   </div>

   <!-- Light Mode Background Elements -->
   <div class="absolute inset-0 opacity-100 dark:opacity-0 transition-opacity duration-500 pointer-events-none">
      <div class="absolute inset-0 bg-gradient-to-b from-cyan-50/50 to-white"></div>
      <div
         class="absolute top-0 right-0 w-[500px] h-[500px] bg-cyan-100/40 rounded-full blur-[100px] -translate-y-1/2 translate-x-1/4">
      </div>
   </div>

   <div class="container mx-auto relative z-10">
      <div
         class="relative bg-white/80 dark:bg-slate-900/80 backdrop-blur-xl rounded-3xl p-8 lg:p-12 overflow-hidden group transition-all duration-500 shadow-2xl border border-white/20 dark:border-white/10 mb-[50px]">

         <!-- Cyber Grid Overlay (Dark Mode) -->
         <div
            class="absolute inset-0 bg-[linear-gradient(rgba(6,182,212,0.05)_1px,transparent_1px),linear-gradient(90deg,rgba(6,182,212,0.05)_1px,transparent_1px)] bg-[size:40px_40px] [mask-image:radial-gradient(ellipse_at_center,black_50%,transparent_100%)] pointer-events-none opacity-0 dark:opacity-100">
         </div>

         <div class="grid gap-12 lg:grid-cols-12 items-center relative z-10">

            <!-- Avatar Section -->
            <div class="lg:col-span-4 flex justify-center lg:justify-start">
               <div class="relative w-72 h-72">
                  <!-- Tech HUD Rings -->
                  <!-- Outer Dashed Ring -->
                  <div
                     class="absolute -inset-6 rounded-full border border-dashed border-cyan-500/30 animate-[spin_20s_linear_infinite]">
                  </div>
                  <!-- Inner Rotating Ring -->
                  <div
                     class="absolute -inset-2 rounded-full border-2 border-transparent border-t-cyan-400 border-r-cyan-400/30 animate-[spin_8s_linear_infinite]">
                  </div>
                  <!-- Counter Rotating Ring -->
                  <div
                     class="absolute -inset-2 rounded-full border-2 border-transparent border-b-blue-500 border-l-blue-500/30 animate-[spin_10s_linear_infinite_reverse]">
                  </div>

                  <!-- Glow -->
                  <div
                     class="absolute inset-0 rounded-full bg-gradient-to-tr from-cyan-500 to-blue-600 blur-2xl opacity-20">
                  </div>

                  <!-- Image -->
                  <div
                     class="absolute inset-0 rounded-full overflow-hidden bg-gray-100 dark:bg-slate-900 ring-4 ring-white dark:ring-cyan-900/30 shadow-lg shadow-cyan-500/20">
                     <img class="w-full h-full object-cover"
                        src="{{#if profile_image}}{{profile_image}}{{else}}{{asset " images/author.webp"}}{{/if}}"
                        alt="{{name}}" fetchpriority="high" width="288" height="288">

                     <!-- Scanning Line Overlay -->
                     <div
                        class="absolute inset-0 bg-gradient-to-b from-transparent via-cyan-400/30 to-transparent h-[200%] w-full animate-[scan_4s_linear_infinite] pointer-events-none">
                     </div>
                     <div
                        class="absolute inset-0 bg-[url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iNCIgaGVpZ2h0PSI0IiB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciPjxyZWN0IHdpZHRoPSI0IiBoZWlnaHQ9IjQiIGZpbGw9Im5vbmUiLz48cmVjdCB3aWR0aD0iNCIgaGVpZ2h0PSIxIiBmaWxsPSJyZ2JhKDAsIDI1NSwgMjU1LCAwLjEpIi8+PC9zdmc+')] opacity-30 pointer-events-none">
                     </div>
                  </div>
               </div>
            </div> <!-- Content Section -->
            <div class="lg:col-span-8 text-center lg:text-left">
               <div
                  class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-cyan-500/10 text-cyan-600 dark:text-cyan-400 text-xs font-bold font-mono mb-4 border border-cyan-500/20">
                  <span class="relative flex h-2 w-2">
                     <span
                        class="animate-ping absolute inline-flex h-full w-full rounded-full bg-cyan-400 opacity-75"></span>
                     <span class="relative inline-flex rounded-full h-2 w-2 bg-cyan-500"></span>
                  </span>
                  {{t "speaker"}}
               </div>

               <h2
                  class="text-5xl lg:text-7xl font-bold mb-6 tracking-tight text-transparent bg-clip-text bg-gradient-to-r from-gray-900 via-cyan-600 to-blue-600 dark:from-white dark:via-cyan-300 dark:to-blue-500 drop-shadow-sm dark:drop-shadow-[0_0_15px_rgba(6,182,212,0.5)] group-hover:animate-pulse">
                  {{name}}
               </h2>

               {{#if location}}
               <div
                  class="flex items-center justify-center lg:justify-start gap-2 text-gray-600 dark:text-cyan-300/80 mb-8 font-mono text-sm tracking-wider">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <span>{{location}}</span>
               </div>
               {{/if}}

               {{#if bio}}
               <div class="relative mb-8 group/bio max-w-3xl mx-auto lg:mx-0">
                  <div
                     class="relative bg-slate-50/80 dark:bg-slate-900/50 p-6 rounded-2xl backdrop-blur-sm border border-gray-200 dark:border-white/5 shadow-inner">
                     <!-- Terminal Header -->
                     <div
                        class="flex items-center gap-2 mb-3 pb-2 opacity-60 border-b border-gray-200 dark:border-white/5">
                        <div class="w-2.5 h-2.5 rounded-full bg-red-500"></div>
                        <div class="w-2.5 h-2.5 rounded-full bg-yellow-500"></div>
                        <div class="w-2.5 h-2.5 rounded-full bg-green-500"></div>
                        <div class="ml-auto text-[10px] font-mono text-gray-400 dark:text-cyan-500/50">BIO.EXE</div>
                     </div>
                     <p class="text-lg text-gray-700 dark:text-cyan-100/90 leading-relaxed font-mono">
                        <span class="text-cyan-500 mr-2">></span><span class="typewriter-text">{{bio}}</span><span
                           class="animate-pulse inline-block w-2 h-4 bg-cyan-500 ml-1 align-middle"></span>
                     </p>
                  </div>
               </div>
               {{/if}}

               <!-- Social Stats / Links -->
               <div class="flex flex-wrap justify-center lg:justify-start gap-3">
                  {{#if website}}
                  <a href="{{website}}" target="_blank"
                     class="group flex items-center justify-center w-10 h-10 rounded-full bg-white dark:bg-slate-900 shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300 border border-gray-200 dark:border-white/10 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20">
                     <svg class="w-5 h-5 transition-transform group-hover:scale-110" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                           d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                     </svg>
                  </a>
                  {{/if}}

                  {{#if twitter}}
                  <a href="https://twitter.com/{{twitter}}" target="_blank" aria-label="Twitter profile"
                     class="group flex items-center justify-center w-10 h-10 rounded-full bg-white dark:bg-slate-900 shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300 border border-gray-200 dark:border-white/10 text-gray-600 dark:text-gray-400 hover:text-black dark:hover:text-white hover:bg-gray-50 dark:hover:bg-white/10">
                     {{> icons/social/twitter classes="w-5 h-5 transition-transform group-hover:scale-110"}}
                  </a>
                  {{/if}}

                  {{#if facebook}}
                  <a href="https://facebook.com/{{facebook}}" target="_blank" aria-label="Facebook profile"
                     class="group flex items-center justify-center w-10 h-10 rounded-full bg-white dark:bg-slate-900 shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300 border border-gray-200 dark:border-white/10 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20">
                     {{> icons/social/facebook classes="w-5 h-5 transition-transform group-hover:scale-110"}}
                  </a>
                  {{/if}}

                  {{#if instagram}}
                  <a href="https://www.instagram.com/{{instagram}}" target="_blank" aria-label="Instagram profile"
                     class="group flex items-center justify-center w-10 h-10 rounded-full bg-white dark:bg-slate-900 shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300 border border-gray-200 dark:border-white/10 text-gray-600 dark:text-gray-400 hover:text-pink-600 dark:hover:text-pink-400 hover:bg-pink-50 dark:hover:bg-pink-900/20">
                     {{> icons/social/instagram classes="w-5 h-5 transition-transform group-hover:scale-110"}}
                  </a>
                  {{/if}}

                  {{#if linkedin}}
                  <a href="https://www.linkedin.com/in/{{linkedin}}" target="_blank" aria-label="LinkedIn profile"
                     class="group flex items-center justify-center w-10 h-10 rounded-full bg-white dark:bg-slate-900 shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300 border border-gray-200 dark:border-white/10 text-gray-600 dark:text-gray-400 hover:text-blue-700 dark:hover:text-blue-500 hover:bg-blue-50 dark:hover:bg-blue-900/20">
                     {{> icons/social/linkedin classes="w-5 h-5 transition-transform group-hover:scale-110"}}
                  </a>
                  {{/if}}

                  {{#if youtube}}
                  <a href="https://www.youtube.com/{{youtube}}" target="_blank"
                     class="group flex items-center justify-center w-10 h-10 rounded-full bg-white dark:bg-slate-900 shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300 border border-gray-200 dark:border-white/10 text-gray-600 dark:text-gray-400 hover:text-red-600 dark:hover:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20">
                     <svg class="w-5 h-5 transition-transform group-hover:scale-110" fill="currentColor"
                        viewBox="0 0 24 24">
                        <path
                           d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                     </svg>
                  </a>
                  {{/if}}
               </div>
            </div>
         </div>
      </div>
   </div>
</section>
{{/foreach}}
{{/get}}