<section class="tabbed-feed-area pt-12 md:pt-16 lg:pt-24 relative z-10">
    <!-- Background Decoration -->
    <div class="absolute top-0 right-0 -mr-20 -mt-20 w-96 h-96 bg-blue-500/5 rounded-full blur-3xl pointer-events-none">
    </div>
    <div
        class="absolute bottom-0 left-0 -ml-20 -mb-20 w-96 h-96 bg-cyan-500/5 rounded-full blur-3xl pointer-events-none">
    </div>

    <div class="container mx-auto relative z-10">
        <!-- Xdev Banner -->
        <div class="relative w-full mb-12 rounded-3xl overflow-hidden shadow-2xl group" data-aos="fade-up">
            <!-- Background Image with Overlay -->
            <div class="absolute inset-0 bg-gradient-to-r from-blue-900/90 to-blue-600/90 z-10"></div>
            <div
                class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1519389950473-47ba0277781c?q=80&w=2070&auto=format&fit=crop')] bg-cover bg-center transform group-hover:scale-105 transition-transform duration-700">
            </div>

            <!-- Content -->
            <div class="relative z-20 px-8 py-16 md:py-20 text-center">
                <h2 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight font-serif">
                    Welcome to <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-blue-200 to-cyan-200">XDev
                        Learn</span>
                </h2>
                <p class="text-lg md:text-xl text-blue-100 max-w-3xl mx-auto leading-relaxed font-light">
                    Nền tảng chia sẻ kiến thức lập trình, công nghệ và phát triển phần mềm.
                    <br class="hidden md:block" />
                    Cùng nhau học tập, chia sẻ và phát triển sự nghiệp.
                </p>

                <!-- Decorative Elements -->
                <div class="absolute top-1/2 left-10 w-24 h-24 bg-blue-400/20 rounded-full blur-xl animate-pulse"></div>
                <div
                    class="absolute bottom-10 right-10 w-32 h-32 bg-cyan-400/20 rounded-full blur-xl animate-pulse delay-700">
                </div>
            </div>
        </div>

        <!-- Tab Navigation -->
        <div class="flex flex-wrap gap-4 mb-12 border-b border-gray-100 dark:border-gray-800">
            <button
                class="tab-btn active px-6 py-3 font-semibold text-gray-700 dark:text-gray-300 border-b-2 border-blue-600 text-blue-600 dark:text-blue-400 transition-colors duration-300"
                data-tab="all">
                {{t "all"}}
            </button>
            <button
                class="tab-btn px-6 py-3 font-semibold text-gray-700 dark:text-gray-300 border-b-2 border-transparent hover:border-gray-300 dark:hover:border-gray-700 transition-colors duration-300"
                data-tab="courses">
                {{t "courses"}}
            </button>
            <button
                class="tab-btn px-6 py-3 font-semibold text-gray-700 dark:text-gray-300 border-b-2 border-transparent hover:border-gray-300 dark:hover:border-gray-700 transition-colors duration-300"
                data-tab="posts">
                {{t "blog-posts"}}
            </button>
            <button
                class="tab-btn px-6 py-3 font-semibold text-gray-700 dark:text-gray-300 border-b-2 border-transparent hover:border-gray-300 dark:hover:border-gray-700 transition-colors duration-300"
                data-tab="lessons">
                {{t "lessons"}}
            </button>
            <button
                class="tab-btn px-6 py-3 font-semibold text-gray-700 dark:text-gray-300 border-b-2 border-transparent hover:border-gray-300 dark:hover:border-gray-700 transition-colors duration-300"
                data-tab="news">
                {{t "news"}}
            </button>
        </div>

        <!-- All Tab -->
        {{#get "posts" include="tags,authors" filter="tag:hash-course,tag:hash-blog" limit="18"
        order="published_at desc"}}
        {{#if posts}}
        <div class="tab-content active" id="all-tab">
            <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 posts">
                {{#foreach posts}}
                {{#has tag="#course"}}
                {{> cards/card-course}}
                {{else}}
                {{> cards/card-post}}
                {{/has}}
                {{/foreach}}
            </div>
        </div>
        {{/if}}
        {{/get}}

        <!-- Courses Tab -->
        {{#get "posts" include="tags,authors" filter="tag:hash-course" limit="12" order="published_at desc"}}
        {{#if posts}}
        <div class="tab-content hidden" id="courses-tab">
            <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 posts">
                {{#foreach posts}}
                {{> cards/card-course}}
                {{/foreach}}
            </div>
        </div>
        {{/if}}
        {{/get}}

        <!-- Blog Posts Tab -->
        {{#get "posts" include="tags,authors" filter="tag:hash-blog" limit="12" order="published_at desc"}}
        {{#if posts}}
        <div class="tab-content hidden" id="posts-tab">
            <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 posts">
                {{#foreach posts}}
                {{> cards/card-post}}
                {{/foreach}}
            </div>
        </div>
        {{/if}}
        {{/get}}

        <!-- Lessons Tab -->
        {{#get "posts" include="tags,authors" filter="tag:hash-lesson" limit="12" order="published_at desc"}}
        {{#if posts}}
        <div class="tab-content hidden" id="lessons-tab">
            <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 posts">
                {{#foreach posts}}
                {{> cards/card-lesson}}
                {{/foreach}}
            </div>
        </div>
        {{/if}}
        {{/get}}

        <!-- News Tab -->
        {{#get "posts" include="tags,authors" filter="tag:hash-news" limit="12" order="published_at desc"}}
        {{#if posts}}
        <div class="tab-content hidden" id="news-tab">
            <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 posts">
                {{#foreach posts}}
                {{> cards/card-news}}
                {{/foreach}}
            </div>
        </div>
        {{/if}}
        {{/get}}
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const tabButtons = document.querySelectorAll('.tab-btn');
        const tabContents = document.querySelectorAll('.tab-content');

        tabButtons.forEach(button => {
            button.addEventListener('click', function () {
                const tabName = this.getAttribute('data-tab');

                // Hide all tabs
                tabContents.forEach(content => {
                    content.classList.add('hidden');
                    content.classList.remove('active');
                });

                // Remove active state from all buttons
                tabButtons.forEach(btn => {
                    btn.classList.remove('border-b-2', 'border-blue-600', 'text-blue-600', 'dark:text-blue-400');
                    btn.classList.add('border-transparent');
                });

                // Show selected tab and highlight button
                const selectedTab = document.getElementById(tabName + '-tab');
                if (selectedTab) {
                    selectedTab.classList.remove('hidden');
                    selectedTab.classList.add('active');
                }
                this.classList.add('border-b-2', 'border-blue-600', 'text-blue-600', 'dark:text-blue-400');
                this.classList.remove('border-transparent');
            });
        });
    });
</script>