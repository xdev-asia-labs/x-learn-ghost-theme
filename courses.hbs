{{!< default}} {{#contentFor "metaTitle" }} <title>{{meta_title}}</title>
   {{/contentFor}}

   <section class="course-area pt-8 md:pt-10 lg:pt-16">
      <div class="container mx-auto">
         {{#get "posts" include="tags,authors" filter="tag:hash-course" limit="100"}}
         {{#if posts}}
         <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 posts">
            {{#foreach posts}}
            {{> cards/card-course}}
            {{/foreach}}
         </div>

         {{/if}}
         {{/get}}
      </div>
   </section>
   {{> filter-topics-course}}