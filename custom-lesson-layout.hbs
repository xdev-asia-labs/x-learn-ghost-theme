   <section class="single-lesson-area pt-8 md:pt-10 lg:pt-16">
      <div class="container mx-auto">
         <div class="grid grid-cols-1 md:grid-cols-12 gap-4 md:gap-6 lg:gap-8">
            <div class="md:col-span-12 lg:col-span-4 lg:order-2 order-2">
               <div class="lesson-list-sidebar sticky top-8">
                  <div class="sidebar rounded-lg shadow duration-300">
                     <div class="left-lesson-list">
                        <!-- Lesson list with server-side rendering -->
                        <div class="lessons-container">
                           <h3
                              class="text-2xl font-bold text-gray-800 group-hover:text-blue-800 transition-colors duration-300 px-6 pt-6 pb-6">
                              {{t "course-lessons"}}
                           </h3>


                           {{!-- Load all lessons, filter by course ID with JavaScript --}}
                           {{#get "posts" filter="tag:hash-lesson" limit="all" order="published_at asc" include="tags"}}
                           {{#if posts}}
                           <style>
                              .related-lesson {
                                 opacity: 0;
                                 transition: opacity 0.3s ease;
                              }

                              .related-lesson.visible {
                                 opacity: 1;
                              }

                              .lesson-item {
                                 display: none;
                              }

                              .lesson-item.visible {
                                 display: block;
                              }

                              .lesson-box.active {
                                 background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
                                 border-color: transparent !important;
                              }

                              .lesson-box.active .lesson-icon div {
                                 background: rgba(255, 255, 255, 0.2) !important;
                                 color: white !important;
                              }

                              .lesson-box.active h4 {
                                 color: white !important;
                              }
                           </style>
                           <div class="related-lesson pb-6">
                              <ol class="lesson-list max-h-[60vh] overflow-y-auto custom-scrollbar px-4 pt-4">
                                 {{#foreach posts}}
                                 <li class="lesson-item mb-2" data-all-tags="{{#foreach tags visibility="
                                    all"}}{{slug}},{{/foreach}}">
                                    <a href="{{url}}"
                                       class="lesson-box block p-3 rounded-xl border border-transparent hover:bg-blue-50 dark:hover:bg-slate-800 hover:border-blue-200 dark:hover:border-blue-900 transition-all duration-300"
                                       id="{{slug}}" data-lesson-slug="{{slug}}">
                                       <h4
                                          class="text-sm font-medium text-gray-600 dark:text-gray-400 transition-colors duration-300">
                                          {{title}}
                                       </h4>
                                    </a>
                                 </li>
                                 {{/foreach}}
                              </ol>
                           </div>
                           <script>
                              // Filter lessons by course ID from body class
                              (function () {
                                 const bodyClasses = document.body.className;
                                 const courseIdMatch = bodyClasses.match(/tag-(hash-course-id-\d+)/);

                                 if (!courseIdMatch) return;

                                 const currentCourseId = courseIdMatch[1];
                                 const container = document.querySelector('.related-lesson');

                                 if (!container) return;

                                 const allLessons = container.querySelectorAll('.lesson-item[data-all-tags]');
                                 let visibleCount = 0;
                                 const currentPath = window.location.pathname;

                                 allLessons.forEach((lesson) => {
                                    const allTags = lesson.getAttribute('data-all-tags') || '';

                                    if (allTags.includes(currentCourseId)) {
                                       lesson.classList.add('visible');
                                       visibleCount++;
                                       const numberEl = lesson.querySelector('.lesson-icon div');
                                       if (numberEl) numberEl.textContent = visibleCount;

                                       // Highlight active lesson
                                       const box = lesson.querySelector('.lesson-box');
                                       if (box && currentPath.includes(box.id)) {
                                          box.classList.add('active');
                                       }
                                    }
                                 });

                                 if (visibleCount > 0) {
                                    container.classList.add('visible');
                                 }
                              })();
                           </script>
                           {{else}}
                           <div class="no-lessons-message px-6 py-12 text-center">
                              <div class="mb-4 relative">
                                 <div class="absolute inset-0 bg-blue-500/20 blur-xl rounded-full"></div>
                                 <svg class="w-16 h-16 mx-auto text-blue-500 relative z-10" fill="none"
                                    stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                       d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253">
                                    </path>
                                 </svg>
                              </div>
                              <h4 class="text-lg font-bold text-gray-900 dark:text-white mb-2">{{t "no-lessons-title"}}
                              </h4>
                              <p class="text-sm text-gray-500 dark:text-gray-400 max-w-[200px] mx-auto leading-relaxed">
                                 {{t "lessons-coming-soon"}}</p>
                           </div>
                           {{/if}}
                           {{/get}}
                        </div>
                     </div>
                  </div>
               </div>
            </div>
            <div class="md:col-span-12 lg:col-span-8 lg:order-1 order-1">
               <div class="gh-content prose prose-lg pb-8 dark:prose-invert">
                  {{content}}

                  <!-- Inline Table of Contents - will be moved after first paragraph by JavaScript -->
                  <div id="inline-toc-container"
