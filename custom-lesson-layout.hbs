                              </path>
                           </svg>
                           <span id="completion-text">{{t "mark-as-complete"}}</span>
                        </button>
                     </div>
                  </div>
               </div>
               {{/if}}

               <!-- Comments Section -->
               <div class="w-full mt-8">
                  {{#if comments}}
                  {{comments}}
                  {{/if}}
               </div>
            </div>
         </div>
      </div>
